<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.mahe.webrover2.MainActivity$PlaceholderFragment">

    <CheckBox
        android:text="Move"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/checkBox2"
        android:layout_marginLeft="8dp"
        android:buttonTint="@color/colorAccent"/>

    <CheckBox
        android:text="Proximity Sensor"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:id="@+id/checkBox"
        android:focusable="false"
        android:checked="false"
        android:buttonTint="@color/colorAccent"/>

    <ImageButton
        android:src="@mipmap/forward"
        android:layout_width="82dp"
        android:layout_height="124dp"
        android:id="@+id/imageButton1"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="85dp"
        android:onClick="onStraight"
        android:background="@null"/>

    <ImageButton
        android:layout_width="115dp"
        android:layout_height="109dp"
        app:srcCompat="@mipmap/ur"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="145dp"
        android:id="@+id/imageButton2"
        android:background="@null"/>

    <ImageButton
        android:layout_width="115dp"
        android:layout_height="113dp"
        app:srcCompat="@mipmap/dr"
        android:id="@+id/imageButton3"
        android:background="@null"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="270dp"/>

    <ImageButton
        android:src="@mipmap/back"
        android:layout_width="98dp"
        android:layout_height="134dp"
        android:id="@+id/imageButton4"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="310dp"
        android:onClick="onBack"
        android:background="@null"
        android:clickable="true"/>

    <ImageButton
        android:layout_width="118dp"
        android:layout_height="115dp"
        app:srcCompat="@mipmap/dl"
        android:id="@+id/imageButton5"
        android:background="@null"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="270dp"/>

    <ImageButton
        android:layout_width="118dp"
        android:layout_height="115dp"
        app:srcCompat="@mipmap/ul"
        android:id="@+id/imageButton6"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="145dp"
        android:background="@null"/>


    <ImageButton
        android:src="@mipmap/stop"
        android:layout_width="82dp"
        android:layout_height="74dp"
        android:id="@+id/imageButton7"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="220dp"
        android:onClick="onStop"
        android:background="@null"/>

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="23dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:text="Surveillance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="0dp"
        android:textScaleX="1.2"/>


</FrameLayout>
